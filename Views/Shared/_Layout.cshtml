<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"]</title>
  <link rel="icon" type="~/image/x-icon" href="~/HandsLogo.png">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/CAPATHON.styles.css" asp-append-version="true" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
  <!-- Navigation Bar -->
<header class="text-gray-600 body-font">
  <div class="container mx-auto p-5">
    <div class="flex flex-wrap items-center justify-between">
      <div class="flex items-center">
        <img src="~/HandsLogo.png" alt="HandsLogo" class="img-fluid" style="width: 50px; height: 50px;">
        <span class="ml-3 text-xl" style="color: #ce3235;">Helping Hands Care Center</span>
      </div>
      <nav class="md:ml-auto">
        <a style="color: #ce3235;" asp-controller="Home" asp-action="Index" class="mr-10 hover:text-gray-900">Home</a>
        <a style="color: #ce3235;" asp-controller="Home" asp-action="Pricing"
          class="mr-10 hover:text-gray-900">Pricing</a>
        <a style="color: #ce3235;" asp-controller="Home" asp-action="Locations"
          class="mr-10 hover:text-gray-900">Locations</a>
        <a style="color: #ce3235;" asp-controller="Home" asp-action="Calendar"
          class="mr-10 hover:text-gray-900">Calendar</a>
        @if (User.Identity.IsAuthenticated)
        {

          <a style="color: #ce3235;" asp-controller="Account" asp-action="Profile" class="mr-10 hover:text-gray-900">
            @User.Identity.Name </a>
          <a style="color: #ce3235;" asp-controller="Account" asp-action="Logout"
            class="mr-10 hover:text-gray-900">Logout</a>

        }
        else
        {

          <a style="color: #ce3235;" asp-area="" asp-controller="Account" asp-action="Login"
            class="mr-10 hover:text-gray-900">Login</a>

        }
      </nav>
    </div>
  </header>

  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

 <footer class="bg-gray-100">
  <div class="container px-5 py-6 mx-auto flex items-center sm:flex-row flex-col">
    <a class="flex title-font font-medium items-center md:justify-start justify-center text-gray-900">
      <img src="~/HandsLogo.png" alt="HandsLogo" class="img-fluid" style="width: 50px; height: 50px;">
      <span class="ml-3 text-xl">Helping Hands Care Centers</span>
    </a>
    <span class="inline-flex sm:ml-auto sm:mt-0 mt-4 justify-center sm:justify-start">
      <a style="color: #ce3235;" asp-controller="Home" asp-action="AboutUs" class="mr-10 hover:text-gray-900">About Us</a>
      <a style="color: #ce3235;" asp-controller="Home" asp-action="Contact" class="mr-10 hover:text-gray-900">Contact Us</a>
      <a class="ml-3 text-gray-500">
        <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
          <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
        </svg>
      </a>
      <a class="ml-3 text-gray-500">
        <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
          <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
        </svg>
      </a>
      <a class="ml-3 text-gray-500">
        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
          <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01"></path>
        </svg>
      </a>
      <a class="ml-3 text-gray-500">
        <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="0" class="w-5 h-5" viewBox="0 0 24 24">
          <path stroke="none" d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"></path>
          <circle cx="4" cy="4" r="2" stroke="none"></circle>
        </svg>
      </a>
    </span>
  </div>
  <div class="container mx-auto py-4 text-center">
    &copy; 2023 - CAPATHON - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-500">Privacy</a>
  </div>
</footer>


  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
