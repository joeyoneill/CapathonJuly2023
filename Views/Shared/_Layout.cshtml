<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CAPATHON</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CAPATHON.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    
    <!-- Navigation Bar -->
    <header class="text-gray-600 body-font">
        <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
          <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
             <img src="~/HandsLogo.png" alt="HandsLogo" class="img-fluid" style="width: 50px; height: 50px;"> </img>
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"> </path>
            
            <span class="ml-3 text-xl">Helping Hands Care Center</span>
          </a>
          <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
            <a style="color: #ce3235;" asp-controller="Home" asp-action="Index"     class="mr-10 hover:text-gray-900">Home</a>
            <a style="color: #ce3235;" asp-controller="Home" asp-action="Pricing"   class="mr-10 hover:text-gray-900">Pricing</a>
            <a style="color: #ce3235;" asp-controller="Home" asp-action="AboutUs"   class="mr-10 hover:text-gray-900">About Us</a>
            <a style="color: #ce3235;" asp-controller="Home" asp-action="Contact"   class="mr-10 hover:text-gray-900">Contact Us</a>
            <a style="color: #ce3235;" asp-controller="Home" asp-action="Locations" class="mr-10 hover:text-gray-900">Locations</a>
            <a style="color: #ce3235;" asp-controller="Home" asp-action="Calendar" class="mr-10 hover:text-gray-900">Calendar</a>
          </nav>
        </div>
      </header>





    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CAPATHON - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
