@using (Html.BeginForm("SelectCareType", "Session", FormMethod.Post))
{
<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <label for="careTypeId" class="block text-gray-700 text-sm font-bold mb-2">Care Type:</label>
    <select id="careTypeId" name="careTypeId" class="form-select w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      <option value="">Select Care Type</option>
      @foreach (var careType in ViewBag.CareTypes as SelectList)
      {
        <option value="@careType.Value">@careType.Text</option>
      }
    </select>
  </div>
<div class="flex justify-center">
  <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline fancy-button">Next</button>
</div>
</div>
}