@model int

@{
    ViewData["Title"] = "Select Location";
}

<h1 class="text-center display-4 font-weight-bold"><strong>Business:</strong> @ViewBag.Business.Name</h1>

<br>

<h2>Select Location</h2>

@using (Html.BeginForm("SelectLocationPost", "Session", FormMethod.Post))
{
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <label for="locationId" class="block text-gray-700 text-sm font-bold mb-2">Locations:</label>
  <select id="locationId" name="locationId" class="form-select w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    <option value="">Select Location</option>
    @foreach (var location in ViewBag.Locations as SelectList)
    {
      <option value="@location.Value">@location.Text</option>
    }
  </select>
</div>
    <div class="flex justify-center">
        <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline fancy-button">Next</button>
    </div>
}